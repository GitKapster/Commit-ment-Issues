extends layout 

block content
    h1 Tasks

    style.
        .container {
            display: flex; 
            justify-content: space-around; 
            flex-wrap: wrap; 
            gap: 20px; 
            padding: 20px;
        }

        .block {
            width: 30%; 
            text-align: center;
            border: 2px solid #ddd;
            border-radius: 10px;
            padding: 15px;
            box-shadow: 2px 2px 10px rgba(0,0,0,0.1);
            background-color: #f9f9f9;
        }

        .image img {
            width: 100%;
            border-radius: 10px;
        }

        .header {
            font-size: 1.2em;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .description {
            font-size: 1em;
            color: #555;
            margin-top: 10px;
        }

        .difficulty-buttons {
            margin-top: 15px;
        }

        .difficulty-buttons button {
            margin: 5px;
            padding: 8px 12px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1em;
        }

        .easy { background-color: #8BC34A; color: white; }
        .medium { background-color: #FFC107; color: white; }
        .hard { background-color: #F44336; color: white; }

    .container
        .block
            .header Aim Trainer
            .image 
                img(src="https://media.istockphoto.com/id/2039769124/vector/vector-illustration-of-business-target-icon.jpg?s=612x612&w=0&k=20&c=xB_bvXwoaVry8VLKwzp7dvUnKoTa8-Nlfq9Y5Pssy_M=" alt="Aim Trainer")
            .description Test your Aim!
            .difficulty-buttons
                button.easy Easy
                button.medium Medium 
                button.hard Hard 

        .block
            .header Reaction Test
            .image 
                img(src="https://static.vecteezy.com/system/resources/previews/002/332/796/non_2x/stopwatch-icon-free-vector.jpg" alt="Reaction Test")
            .description Test your reaction speed 
            .difficulty-buttons
                button.easy(onclick="window.location='/reaction-test/easy'") Easy
                button.medium(onclick="window.location='/reaction-test/medium'") Medium 
                button.hard(onclick="window.location='/reaction-test/hard'") Hard

        .block
            .header Memory Test
            .image 
                img(src="https://img.freepik.com/free-psd/brain-outline-illustration_23-2150761744.jpg" alt="Memory Test")
            .description Test your memory
            .difficulty-buttons
                button.easy(onclick="window.location='/memory-test/easy'") Easy
                button.medium(onclick="window.location='/memory-test/medium'") Medium 
                button.hard(onclick="window.location='/memory-test/hard'") Hard
