doctype html
html
  head
    style.
      body {
        margin: 0;
        font-family: Arial, sans-serif;
      }
      .navbar {
        position: fixed;
        top: 0;
        width: 100%;
        background: #333;
        display: flex;
        align-items: center;
        padding: 10px 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }
      .navbar img {
        width: 40px;
        height: 40px;
        margin: 0 15px;
        padding: 0px 20px 0px 0px;
      }
      .navbar .buttons {
        flex-grow: 1;
        display: flex;
        justify-content: center;
        gap: 10px;
      }
      .navbar button {
        flex: 1; 
        max-width: 120px; 
        height: 45px; 
        padding: 10px;
        font-size: 16px;
        color: white;
        background: #555;
        border: none;
        cursor: pointer;
        border-radius: 5px;
        text-align: center;
      }
      .navbar button:hover {
        background: #777;
      }
      .content {
        margin-top: 80px; /* Push content down so itâ€™s not hidden under navbar */
        text-align: center;
        padding: 20px;
      }

  body
    .navbar
      a(href="/")
        img(src="/images/sillycat.jpg", alt="Logo Icon") 
      .buttons
        button(onclick="alert('Tasks clicked')") Tasks
        button(onclick="alert('Leaderboard clicked')") Leaderboard
        button(onclick="alert('Games clicked')") Games
        button(onclick="alert('Forum clicked')") Forum
      a(href="/account")
        img(src="/images/accounticon.png", alt="Account Icon")

    //- Move block content OUTSIDE the navbar
    .content
      block content