extends layout

block content
  h1 Memory Test
  
  style.
    body {
      font-family: Arial, sans-serif;
      
      flex-direction: column;
      align-items: center;
      background-color: #f0f0f0;
      margin: 0;
      
    }

    .game-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      background-color: white;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      max-width: 800px;
      width: 100%;
    }

    .game-info {
      display: flex;
      justify-content: space-between;
      width: 100%;
      margin-bottom: 20px;
    }

    .timer, .moves {
      font-size: 1.2rem;
      font-weight: bold;
      color: #333;
    }

    .game-board {
      display: grid;
      gap: 10px;
      margin-bottom: 20px;
    }

    .card {
      width: 80px;
      height: 120px;
      background-color: #2196F3;
      border-radius: 5px;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 2rem;
      color: white;
      cursor: pointer;
      transition: transform 0.6s;
      transform-style: preserve-3d;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-inner {
      position: relative;
      width: 100%;
      height: 100%;
      text-align: center;
      transition: transform 0.6s;
      transform-style: preserve-3d;
    }

    .card.flipped .card-inner {
      transform: rotateY(180deg);
    }

    .card-front, .card-back {
      position: absolute;
      width: 100%;
      height: 100%;
      backface-visibility: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
      border-radius: 5px;
    }

    .card-front {
      background-color: #2196F3;
    }

    .card-back {
      background-color: white;
      transform: rotateY(180deg);
      color: #333;
      font-size: 2.5rem;
    }

    .matched {
      background-color: #4CAF50;
      cursor: default;
    }

    .restart-btn {
      padding: 10px 20px;
      background-color: #f44336;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s;
      margin-top: 10px;
    }

    .restart-btn:hover {
      background-color: #d32f2f;
    }

    .hidden {
      display: none;
    }

    .game-over {
      text-align: center;
      margin-top: 20px;
    }

  .game-container
    .game-info
      .timer Time: 0s
      .moves Moves: 0
    .game-board
    button.restart-btn Return to Games
    .game-over.hidden
      h2 Congratulations!
      p You completed the game in 
        span.final-time
        |  with 
        span.final-moves
        |  moves.

  script(src="/services/memoryTest.js")
