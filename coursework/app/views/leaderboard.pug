doctype html
html
  head
    title Leaderboard
    style.
      body {
        font-family: Arial, sans-serif;
        background: #1e1e2f;
        color: white;
        text-align: center;
        padding: 20px;
      }
      .leaderboard {
        max-width: 400px;
        margin: auto;
        background: #43c6c1;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 16, 66, 0.1);
      }
      .leaderboard-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 10px;
        border-bottom: 1px solid #444;
      }
      .avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        border: 2px solid yellow;
      }
  body
