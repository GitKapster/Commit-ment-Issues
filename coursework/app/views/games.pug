extends layout

block content
  head
    title Games Page
    style.
      body {
        font-family: Arial, sans-serif;
        background: #3f3f3f;
        color: white;
        margin: 0;
        padding-top: 80px;
      }

      .container {
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 10px;
      }

      .featured-section {
        display: flex;
        justify-content: space-between;
        gap: 20px;
        margin-bottom: 30px;
      }

      .featured-card {
        background: #2c2c2c;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        width: 48%;
        overflow: hidden;
        transition: transform 0.3s ease;
      }

      .featured-card:hover {
        transform: translateY(-5px);
      }

      .featured-image {
        width: 100%;
        height: 300px;
        object-fit: cover;
        border-bottom: 2px solid #5dc5c1;
      }

      .featured-info {
        padding: 20px;
      }

      .featured-title {
        color: #67d9dc;
        font-size: 22px;
        font-weight: bold;
        margin-bottom: 10px;
      }

      .featured-description {
        color: #e0e0e0;
        margin-bottom: 15px;
        line-height: 1.5;
      }

      .action-button {
        background: #5dc5c1;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
      }

      .action-button:hover {
        background: #4aa6a2;
        transform: scale(1.05);
      }

