extends layout

block content
  style.
    .page-container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 60px 0 0 0;
      color: white;
      text-align: left;
    }
    h1 {
      color: white;
      margin-bottom: 30px;
    }
    h2 {
      color: #5dc5c1;
      margin-top: 30px;
      margin-bottom: 15px;
      border-bottom: 1px solid #555;
      padding-bottom: 10px;
    }
    .nav-container {
      background: #2c2c2c;
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 30px;
      transition: all 0.3s ease;
    }

    .nav-container:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .nav-title {
      color: #5dc5c1;
      font-size: 18px;
      font-weight: bold;
      margin-bottom: 10px;
      padding-bottom: 5px;
      border-bottom: 1px solid #444;
    }

    .nav-links {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 10px;
      margin-top: 10px;
    }

    .nav-links a {
      color: white;
      text-decoration: none;
      font-size: 15px;
      padding: 8px 12px;
      border-radius: 5px;
      transition: all 0.2s ease;
      background: #333;
      display: block;
    }

    .nav-links a:hover {
      background: #444;
      color: #5dc5c1;
      transform: translateX(5px);
    }

    /* Scrollbar styling to match news-scrollbox */
    .nav-container::-webkit-scrollbar {
      width: 8px;
    }

    .nav-container::-webkit-scrollbar-track {
      background: #333;
      border-radius: 8px;
    }

    .nav-container::-webkit-scrollbar-thumb {
      background-color: #5dc5c1;
      border-radius: 8px;
    }
