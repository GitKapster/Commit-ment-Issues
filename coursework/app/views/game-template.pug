extends layout

block content
  style.
    .page-container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 60px 0 0 0;
      color: white;
      text-align: left;
    }
    h1 {
      color: white;
      margin-bottom: 30px;
    }
    h2 {
      color: #5dc5c1;
      margin-top: 30px;
      margin-bottom: 15px;
      border-bottom: 1px solid #555;
      padding-bottom: 10px;
    }
    .nav-container {
      background: #2c2c2c;
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 30px;
      transition: all 0.3s ease;
    }

    .nav-container:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    .nav-title {
      color: #5dc5c1;
      font-size: 18px;
      font-weight: bold;
      margin-bottom: 10px;
      padding-bottom: 5px;
      border-bottom: 1px solid #444;
    }

    .nav-links {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 10px;
      margin-top: 10px;
    }

    .nav-links a {
      color: white;
      text-decoration: none;
      font-size: 15px;
      padding: 8px 12px;
      border-radius: 5px;
      transition: all 0.2s ease;
      background: #333;
      display: block;
    }

    .nav-links a:hover {
      background: #444;
      color: #5dc5c1;
      transform: translateX(5px);
    }

    /* Scrollbar styling to match news-scrollbox */
    .nav-container::-webkit-scrollbar {
      width: 8px;
    }

    .nav-container::-webkit-scrollbar-track {
      background: #333;
      border-radius: 8px;
    }

    .nav-container::-webkit-scrollbar-thumb {
      background-color: #5dc5c1;
      border-radius: 8px;
    }

    /* Image styling */
    .image-container {
      margin: 20px 0;
      background: #1d1d1d;
      border-radius: 8px;
      padding: 15px;
      box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
      text-align: center;
    }

    .image-container img {
      height: auto;
      border-radius: 5px;
      display: block;
      margin: 0 auto;
    }

    .image-placeholder {
      background: #2c2c2c;
      border: 2px dashed #444;
      border-radius: 8px;
      height: 220px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #888;
      font-style: italic;
      margin: 20px 0;
    }

    /* Standard image sizes */
    .img-small {
      max-width: 300px;
    }

    .img-medium {
      max-width: 500px;
    }

    .img-large {
      max-width: 800px;
    }

    .img-full {
      width: 100%;
    }

    /* Image captions */
    .image-caption {
      margin-top: 10px;
      color: #aaa;
      font-size: 14px;
      font-style: italic;
    }

    /* Video embeds */
    .video-embed {
      background: #2c2c2c;
      border: 2px dashed #444;
      border-radius: 8px;
      height: 315px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #888;
      font-style: italic;
      margin: 20px 0;
    }

    .video-container {
      position: relative;
      width: 100%;
      padding-bottom: 56.25%; /* 16:9 aspect ratio */
      margin: 20px 0;
    }

    .video-container iframe {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border-radius: 8px;
    }
  
  block additional_styles
  
  .page-container
    block page_title
      h1 Game Mechanics Guide
    
    // Quick Navigation Section
    block navigation
      .nav-container
        block navTitle
          .nav-title Quick Navigation
        block navLinks
          .nav-links
            a(href='#aiming') Aim Overview
            a(href='#movement') Mouse Control
            a(href='#abilities') Crosshair Placement
            a(href='#weapons') Movement Mechanics
            a(href='#maps') Practice Routine
            a(href='#teamwork') Overview
    
    // Introduction Section
    .section
      h2 Introduction
      .content-placeholder
        block section_introduction
          | [Fill in your introduction to the game and this guide.]
      block intro_image
        .image-placeholder Game Screenshot Placeholder
    
    // Aiming Section
    .section#aiming
      h2 Aim Overview
      .content-placeholder
        block section_aiming_overview
          | [Describe the game's aiming mechanics.]
      h3 Aiming Styles
      .content-placeholder
        block section_aiming_styles
          | [Detail different aim styles.]
      .tip-box
        .tip-title Pro Tip
        .content-placeholder
          block section_aiming_tip
            | [Share a professional player's tip about aiming technique.]
    
    // Mouse control section
    .section#mouse
      h2 Mouse Control
      .content-placeholder
        block section_mouse_control
          | [Explain game priorities]
      h3 Sensitivity
      .content-placeholder
        block section_sensitivity
          | [Explain different types of sensitivity and their uses]
    
    // crosshair section
    .section#crosshair
      h2 Crosshair Placement
      .content-placeholder
        block section_abilities_overview
          | [Overview of character abilities.]
        block crosshair_placement_image
          .image-placeholder Game Screenshot Placeholder
        h3 Crosshair Design
        block crosshair_design
          | [Overview of crosshairs]
    
    // Movement section
    .section#movement
      h2 Movement
      .content-placeholder
        block section_movement_overview
          | [Overview of the game's movement.]
      h3 Movement Practice Guide
        block movement_practice
          | [Overview of movement practice]
        .video-embed
    
    // Practice Routine Section 
    .section#practice
      h2 Practice Routine
      .content-placeholder
