extends layout

block content
  style.
    .login-container {
      display: flex;
      justify-content: center;
      margin-top: 50px;
    }

    .login-button {
      padding: 12px 24px;
      font-size: 18px;
      font-weight: bold;
      color: white;
      background: #43c6c1;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .login-button:hover {
      background: #37a09c;
      transform: scale(1.02);
    }

    .login-button:active {
      transform: scale(0.98);
    }

  .login-container
    button.login-button(onclick="window.location.href='/login'") Login