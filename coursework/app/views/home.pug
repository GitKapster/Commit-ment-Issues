extends layout

block content
  head
    title Home - Aim Training Platform
    style.
      body {
        font-family: Arial, sans-serif;
        background: #3f3f3f;
        color: white;
        margin: 0;
        padding-top: 80px;
      }

      .container {
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
      }

      .featured-section {
        display: flex;
        justify-content: space-between;
        gap: 20px;
        margin-bottom: 30px;
      }

      .featured-card {
        background: #2c2c2c;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        width: 48%;
        overflow: hidden;
        transition: transform 0.3s ease;
      }

      .featured-card:hover {
        transform: translateY(-5px);
      }

      .featured-image {
        width: 100%;
        height: 250px;
        object-fit: cover;
        border-bottom: 2px solid #5dc5c1;
      }

      .featured-info {
        padding: 20px;
      }

      .featured-title {
        color: #67d9dc;
        font-size: 22px;
        font-weight: bold;
        margin-bottom: 10px;
      }

      .featured-description {
        color: #e0e0e0;
        margin-bottom: 15px;
        line-height: 1.5;
      }

      .action-button {
        background: #5dc5c1;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
      }

      .action-button:hover {
        background: #4aa6a2;
        transform: scale(1.05);
      }

      .content-section {
        display: flex;
        justify-content: space-between;
        gap: 20px;
        margin-bottom: 30px;
      }

      .section-container {
        background: #2c2c2c;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        width: 48%;
        padding: 20px;
      }

      .section-title {
        color: #67d9dc;
        font-size: 20px;
        font-weight: bold;
        margin-bottom: 15px;
        border-bottom: 1px solid #444;
        padding-bottom: 10px;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        background: #2c2c2c;
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 15px;
      }

      th, td {
        padding: 12px;
        border: 1px solid #444;
        text-align: left;
        color: #e0e0e0;
      }

      th {
        background-color: #1e1e1e;
        color: #67d9dc;
        font-size: 16px;
      }

      tr:nth-child(even) {
        background-color: #3a3a3a;
      }

      tr:hover {
        background-color: #4a4a4a;
        transition: 0.3s;
      }

      .topic-list {
        display: flex;
        flex-direction: column;
        gap: 10px;
      }
      
      .topic-item {
        background: #3a3a3a;
        border-radius: 8px;
        padding: 15px;
        transition: all 0.2s ease;
      }
      
      .topic-item:hover {
        background: #444;
      }
      
      .topic-title {
        color: white;
        font-weight: bold;
        text-decoration: none;
        font-size: 16px;
        transition: color 0.2s ease;
        display: block;
        margin-bottom: 5px;
      }
      
      .topic-title:hover {
        color: #5dc5c1;
      }
      
      .topic-details {
        font-size: 14px;
        color: #aaa;
        display: flex;
        gap: 15px;
      }

      .see-more {
        text-align: right;
        margin-top: 15px;
      }

      .see-more a {
        color: #5dc5c1;
        text-decoration: none;
        font-weight: bold;
      }

      .see-more a:hover {
        text-decoration: underline;
      }

  body
    .container
      // Featured Section
      .featured-section
        // Featured Task
        .featured-card
          img.featured-image(src="/images/featured-task.jpg" alt="Featured Task")
          .featured-info
            .featured-title Featured Task: Aim Training
            .featured-description Improve your accuracy with our new precision training task. Choose from a range of dificulties and compete for the top score!
            a.action-button(href="/tasks/precision-flick") Try it now

        // Featured Game
        .featured-card
          img.featured-image(src="/images/featured-game.jpg" alt="Featured Game")
          .featured-info
            .featured-title Featured Game: Valorant
            .featured-description Learn tips and tricks for improving your mechanics in the popular Riot Games hero shooter Valorant!
            a.action-button(href="/games/speed-reactor") Play now

      // Content Section
      .content-section
        // Task Scores Section
        .section-container
          .section-title Top Precision Flick Scores
          table
            thead
              tr
                th Rank
                th Username
                th Score
                th Date
            tbody
              - var topScores = [{Username: 'Nova227', Score: '98.5', Date: 'Mar 30, 2025'}, {Username: 'Virtus.Roe', Score: '96.3', Date: 'Mar 29, 2025'}, {Username: 'Admin', Score: '94.7', Date: 'Mar 28, 2025'}, {Username: 'Kasper', Score: '93.1', Date: 'Mar 27, 2025'}, {Username: 'AimLegend', Score: '91.8', Date: 'Mar 26, 2025'}]
              each score, index in topScores
                tr
                  td #{index + 1}
                  td #{score.Username}
                  td #{score.Score}
                  td #{score.Date}
          .see-more
            a(href="/leaderboard") View full leaderboard →

        // Forum Posts Section
        .section-container
          .section-title Featured Forum Posts
          .topic-list
            // Topic 1
            .topic-item
              a.topic-title(href="/forum/topic/1") Is Amin Team 1 Material?
              .topic-details
                span.topic-author Posted by Admin
                span.topic-replies 2 replies
            
            // Topic 2
            .topic-item
              a.topic-title(href="/forum/topic/2") How to stop shaking when i aim?
              .topic-details
                span.topic-author Posted by Kasper
                span.topic-replies 1 reply
            
            // Topic 3
            .topic-item
              a.topic-title(href="/forum/topic/3") Is Nova227 the rookie of the year 2025?
              .topic-details
                span.topic-author Posted by RoehamptonEsports
                span.topic-replies 1 reply
                
            // Topic 4
            .topic-item
              a.topic-title(href="/forum/topic/4") How do i improve my reaction speed?
              .topic-details
                span.topic-author Posted by Virtus.Roe
                span.topic-replies 1 reply
          .see-more
            a(href="/forum") Visit the forum →