//- Topic Page - For viewing a single topic with all replies
extends layout

block content
  .forum-container
    // Back to forum link
    .forum-nav
      a.back-link(href='/forum') â† Back to Forum
    
    // Topic details
    if topic
      .topic-full
        .topic-header
          h2.topic-title= topic.title
          .topic-meta
            span.topic-author Posted by #{topic.author}
            span.topic-date= topic.date
        
        .topic-body
          p= topic.content
        
        // Replies section
        .topic-replies
          h3 Replies
          if topic.replies && topic.replies.length > 0
            each reply, index in topic.replies
              .reply-item
                .reply-header
                  span.reply-author #{reply.author}
                  span.reply-date #{reply.date}
                .reply-content
                  p= reply.content
          else
            .no-replies No replies yet
        
        // Add reply form (only for logged-in users)
        .reply-form
          h3 Add a Reply
          if user
            form(action=`/forum/topic/${topic.id}/reply` method='POST')
              textarea#reply-textarea(name='content' rows='4' placeholder='Write your reply here...' required)
              button.submit-btn(type='submit') Post Reply
          else
            p You need to 
              a(href='/login') login 
              | to post a reply.
    else
      .error-message Topic not found
  
  style.
    .forum-container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 20px;
      color: white;
      text-align: left;
    }
    
    .forum-nav {
      margin-bottom: 20px;
    }
    
    .back-link {
      color: #5dc5c1;
      text-decoration: none;
      font-size: 16px;
      display: inline-flex;
      align-items: center;
      transition: transform 0.2s ease;
    }
    
    .back-link:hover {
      transform: translateX(-5px);
    }
    
    .topic-full {
      background: #2c2c2c;
      border-radius: 8px;
      padding: 20px;
      margin-bottom: 20px;
    }
    
    .topic-header {
      margin-bottom: 20px;
    }
    
    .topic-title {
      color: #5dc5c1;
      margin-top: 0;
      margin-bottom: 10px;
    }
    
    .topic-meta {
      display: flex;
      gap: 15px;
      color: #aaa;
      font-size: 14px;
    }
    
    .topic-body {
      color: #ddd;
      line-height: 1.6;
      margin-bottom: 30px;
      border-bottom: 1px solid #444;
      padding-bottom: 20px;
    }
    
    .topic-replies h3 {
      color: #5dc5c1;
      margin-bottom: 15px;
    }
    
    .reply-item {
      background: #333;
      border-radius: 8px;
      padding: 15px;
      margin-bottom: 15px;
      border-left: 3px solid #5dc5c1;
    }
    
    .reply-header {
      display: flex;
      justify-content: space-between;
      margin-bottom: 10px;
      padding-bottom: 5px;
      border-bottom: 1px solid #444;
    }
    
    .reply-author {
      font-weight: bold;
      color: #ddd;
    }
    
    .reply-date {
      color: #aaa;
      font-size: 14px;
    }
    
    .reply-content {
      color: #ccc;
    }
    
    .no-replies {
      color: #888;
      font-style: italic;
      text-align: center;
      padding: 20px;
    }
    
    .reply-form {
      margin-top: 30px;
    }
    
    .reply-form h3 {
      color: #5dc5c1;
      margin-bottom: 15px;
    }
    
    .reply-form textarea {
      width: 100%;
      background: #333;
      border: 1px solid #444;
      border-radius: 5px;
      padding: 10px;
      color: white;
      resize: vertical;
      margin-bottom: 15px;
      font-family: inherit;
    }
    
    .reply-form textarea:focus {
      outline: none;
      border-color: #5dc5c1;
    }
    
    .submit-btn {
      background: #5dc5c1;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    
    .submit-btn:hover {
      background: #4aa6a2;
      transform: scale(1.05);
    }
    
    .error-message {
      text-align: center;
      color: #ff6b6b;
      font-size: 18px;
      padding: 30px;
      background: #2c2c2c;
      border-radius: 8px;
    }