//- views/layout.pug
doctype html
html
  head
    title XP Aim Trainer
    style.
      body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #3f3f3f;
      }
      .navbar {
        position: fixed;
        top: 0;
        width: 100%;
        background: #2c2c2c;
        display: flex;
        align-items: center;
        padding: 10px 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }
      .navbar img {
        width: 40px;
        height: 40px;
        margin: 0 15px;
        padding: 0px 20px 0px 0px;
      }
      .navbar .buttons {
        flex-grow: 1;
        display: flex;
        justify-content: center;
        gap: 10px;
      }
      .navbar button {
        flex: 1; 
        max-width: 120px; 
        height: 40px; 
        padding: 10px;
        font-size: 16px;
        font-weight: bold;
        color: white;
        background: #555;
        border: none;
        cursor: pointer;
        border-radius: 5px;
        text-align: center;
      }
      .navbar button:hover {
        background: #4d4c4c;
        color: #67d9dc;
        transform: scale(1.02);
      }
      .content {
        margin-top: 80px; /* Push content down so it's not hidden under navbar */
        text-align: center;
        padding: 20px;
      }

  body
    .navbar
      a(href="/")
        img(src="/images/sillycat.jpg", alt="Logo Icon") 
      .buttons
        button(onclick="alert('Tasks clicked')") Tasks
        button(onclick="window.location.href='/leaderboard'") Leaderboard
        button(onclick="alert('Games clicked')") Games
        button(onclick="window.location.href='/forum'") Forum  <!-- CHANGED: Now links to /forum instead of showing alert -->
      a(href="/account")
        img(src="/images/accounticon.png", alt="Account Icon")


    //- Move block content OUTSIDE the navbar
    .content
      block content
