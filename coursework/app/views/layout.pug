doctype html
html
  head
    title XP Aim Trainer
    style.
      body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #3f3f3f;
      }
      .navbar {
        position: fixed;
        top: 0;
        width: 100%;
        background: #2c2c2c;
        display: flex;
        align-items: center;
        padding: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }
      .logo-container {
        display: flex;
        align-items: center;
        text-decoration: none;
        width: 180px;
      }
      .navbar img {
        width: 40px;
        height: 40px;
      }
      .logo-text {
        font-weight: 800;
        font-size: 24px;
        letter-spacing: 1px;
        padding: 0 0 0 10px;
        background: linear-gradient(90deg, #67d9dc, #5dc5c1);
        background-clip: text;
        -webkit-background-clip: text;
        color: transparent;
        position: relative;
        white-space: nowrap;
      }
      .navbar .buttons {
        flex-grow: 1;
        display: flex;
        justify-content: center;
        gap: 10px;
      }
      .navbar button {
        flex: 1;
        max-width: 120px;
        height: 40px;
        font-size: 16px;
        font-weight: bold;
        color: white;
        background: #555;
        border: none;
        cursor: pointer;
        border-radius: 5px;
      }
      .navbar button:hover {
        background: #4d4c4c;
        color: #67d9dc;
      }
      .account-container {
        width: 180px;
        display: flex;
        align-items: center;
        justify-content: flex-end;
        gap: 10px;
      }
      .login-button {
        background: none;
        color: white;
        font-weight: bold;
        padding: 0 30px 0 0;
        border: none;
        cursor: pointer;
        text-decoration: none;
        font-size: 16px;
      }
      .login-button:hover {
        color: #67d9dc;
      }
      .account-icon {
        padding: 0 15px 0 0;
      }
  body
    .navbar
      a.logo-container(href="/")
        img(src="/images/sillycat.jpg", alt="Logo Icon", id="cat")
        .logo-text XPTrainer
      .buttons
        button(onclick="window.location.href='/tasks'") Tasks
        button(onclick="window.location.href='/leaderboard'") Leaderboard
        button(onclick="window.location.href='/games'") Games
        button(onclick="window.location.href='/forum'") Forum
      .account-container
        a.account-icon(href="/account")
          img(src="/images/accounticon.png", alt="Account Icon")
        if !user
          a.login-button(href="/login") Login
    
    .content
      block content

    //- Add JavaScript at the end of the body
    script.
      // Simple function to toggle topic content visibility
      function toggleTopic(topicId) {
        console.log("Toggling topic: " + topicId);
        const contentElement = document.getElementById("topic-" + topicId + "-content");
        if (contentElement) {
          if (contentElement.classList.contains("hidden")) {
            contentElement.classList.remove("hidden");
            console.log("Showing topic content");
          } else {
            contentElement.classList.add("hidden");
            console.log("Hiding topic content");
          }
        } else {
          console.error("Could not find element with id: topic-" + topicId + "-content");
        }
      }