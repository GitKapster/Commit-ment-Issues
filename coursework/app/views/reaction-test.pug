extends layout

block content
  h1 Reaction Test - #{difficulty} Mode

  // Inline CSS for styling
  style.
    body {
      font-family: Arial, sans-serif;
      background-color:rgb(41, 41, 41);
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh; /* Full viewport height */
      margin: 0;
    }

    /* Container for the reaction test */
    .reaction-container {
      text-align: center;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 20px;
    }

    /* Styling the reaction box */
    #reaction-box {
      width: 250px;
      height: 250px;
      border: 3px solid black;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 24px;
      font-weight: bold;
      background-color: turquoise; /* Initial color */
      cursor: pointer;
      border-radius: 10px;
      transition: background-color 0.3s ease-in-out; /* Smooth color transitions */
    }

    /* Reaction time display */
    #reaction-time {
      font-size: 22px;
      font-weight: bold;
      color: #333;
    }

  .reaction-container
    p#reaction-time Click to Start!
    div#reaction-box 
      | Ready to Start

  script(src="/coursework\app\services\reactionTest.js") // Link to JavaScript file