extends layout

block content
  .content
    .account-box
      h1 Welcome, #{username}!
      p User ID: #{userID}
      button(onclick="window.location.href='/logout'") Log Out 

  style.
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background-color: #3f3f3f;
    }

    .account-box {
      background-color: #2c2c2c;
      color: white;
      padding: 20px;
      border-radius: 10px;
      width: 300px;
      text-align: center;
      margin: 50px auto;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    h1 {
      color: white;
      font-size: 24px;
    }

    p {
      color: #bbb;
      font-size: 18px;
    }

    .account-box button {
        flex: 1; 
        max-width: 120px; 
        height: 40px; 
        padding: 10px;
        font-size: 16px;
        font-weight: bold;
        color: white;
        background: #f14141;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        border-radius: 5px;
        text-align: center;
    }

    .account-box button:hover{
      transform: scale(1.03);
      background: #c32929;
    }