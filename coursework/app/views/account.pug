extends layout

block content
  .content
    .account-box
      h1 Welcome, #{username}!
      p User ID: #{userID}
      button(onclick="window.location.href='/logout'") Log Out

      //- Table 1: Aim Task (Dynamic data from aimData)
      h2 Aim Task
      if aimData && aimData.UserID
        table
          thead
            tr
              th Username
              th Task
              th Score
          tbody
            tr
              td= aimData.UserID
              td= aimData.TaskID
              td= aimData.Score
      else
        p No data available for Aim Task.

      //- Table 2: Memory Task (Dynamic data from memoryData)
      h2 Memory Task
      if memoryData && memoryData.UserID
        table
          thead
            tr
              th Username
              th Task
              th Score
          tbody
            tr
              td= memoryData.UserID
              td= memoryData.TaskID
              td= memoryData.Score
      else
        p No data available for Memory Task.

      //- Table 3: Reaction Task (Dynamic data from reactionData)
      h2 Reaction Task
      if reactionData && reactionData.UserID
        table
          thead
            tr
              th Username
              th Task
              th Score
          tbody
            tr
              td= reactionData.UserID
              td= reactionData.TaskID
              td= reactionData.Score
      else
        p No data available for Reaction Task.

  style.
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background-color: #3f3f3f;
    }

    .account-box {
      background-color: #363636;
      color: white;
      padding: 20px;
      border-radius: 10px;
      width: 300px;
      text-align: center;
      margin: 50px auto;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    h1 {
      color: white;
      font-size: 24px;
    }

    p {
      color: #bbb;
      font-size: 18px;
    }

    .account-box button {
        flex: 1; 
        max-width: 120px; 
        height: 40px; 
        padding: 10px;
        font-size: 16px;
        font-weight: bold;
        color: white;
        background: #f14141;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        border-radius: 5px;
        text-align: center;
    }

    .account-box button:hover{
      transform: scale(1.03);
      background: #c32929;
    }

    table {
      width: 100%;
      margin: 20px 0;
      border-collapse: collapse;
    }

    th, td {
      padding: 10px;
      text-align: left;
      border: 1px solid #ddd;
    }

    th {
      background-color: #444;
      color: white;
    }

    tbody tr:nth-child(odd) {
      background-color: #2c2c2c;
    }
    
    tbody tr:nth-child(even) {
      background-color: #3f3f3f;
    }