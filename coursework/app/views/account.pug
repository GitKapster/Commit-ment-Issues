extends layout

block content
  .content
    .account-box
      h1 Welcome, #{username}!
      p User ID: #{userID}
      button(onclick="window.location.href='/logout'") Log Out 

      //- Table 1: Aim Scores
      h2 Aim Task
      table
        thead
          tr
            th Username
            th Task
            th Score
        tbody
            tr
              td= "Erin"
              td= "Aim"
              td= 10

      //- Table 2: Memory Scores
      h2 Memory Task
      table
        thead
          tr
            th Username
            th Task
            th Score
        tbody
            tr
              td= "Erin"
              td= "Memory"
              td= 5

      //- Table 3: Reaction Scores
      h2Reaction Task
      table
        thead
          tr
            th Username
            th Task
            th Score
        tbody
            tr
              td= "Erin"
              td= "Reaction"
              td= 7


  style.
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      background-color: #3f3f3f;
    }

    .account-box {
      background-color: #363636;
      color: white;
      padding: 20px;
      border-radius: 10px;
      width: 300px;
      text-align: center;
      margin: 50px auto;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    h1 {
      color: white;
      font-size: 24px;
    }

    p {
      color: #bbb;
      font-size: 18px;
    }

    .account-box button {
        flex: 1; 
        max-width: 120px; 
        height: 40px; 
        padding: 10px;
        font-size: 16px;
        font-weight: bold;
        color: white;
        background: #f14141;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        border-radius: 5px;
        text-align: center;
    }

    .account-box button:hover{
      transform: scale(1.03);
      background: #c32929;
    }

    table {
      width: 100%;
      margin: 20px 0;
      border-collapse: collapse;
    }

    th, td {
      padding: 10px;
      text-align: left;
      border: 1px solid #ddd;
    }

    th {
      background-color: #444;
      color: white;
    }

    tbody tr:nth-child(odd) {
      background-color: #2c2c2c;
    }
    
    tbody tr:nth-child(even) {
      background-color: #3f3f3f;
    }