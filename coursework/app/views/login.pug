//- views/login.pug
extends layout

block content
  h1 Login to WEBSITE
  .login-container
    form#loginForm(action="/login", method="POST", enctype="application/x-www-form-urlencoded")
      input(type="text", name="username", placeholder="Username", required)
      input(type="password", name="password", placeholder="Password", required)
      button(type="submit") Login

  //- Styles for the login page
  style.
    /* Scope the styles to login container */
    .login-container {
      background: #222;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
      width: 100%;
      max-width: 400px;
      margin: 50px auto;
      text-align: center;
    }
    
    h1 {
      margin-bottom: 20px; 
      color: white; 
    }

    .login-container input {
      width: 100%;
      padding: 12px;
      margin: 8px 0;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 16px;
      transition: border-color 0.3s;
      box-sizing: border-box;
    }

    .login-container input:focus {
      border-color: #5dc5c1;
      outline: none;
    }

    .login-container button {
      width: 100%;
      padding: 12px;
      margin: 8px 0;
      background-color: #5dc5c1; 
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
      font-weight: bold;
      transition: background-color 0.3s;
    }

    .login-container button:hover {
      background-color: #58b7b4;
      transform: scale(1.02);
    }
