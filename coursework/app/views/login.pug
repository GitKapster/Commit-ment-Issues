//- views/login.pug
extends layout

block content
  h1 Login to XPTrainer
  .login-container
    form#loginForm(action="/login", method="POST", enctype="application/x-www-form-urlencoded")
      input(type="text", name="username", placeholder="Username", required)
      input(type="password", name="password", placeholder="Password", required)
      button(type="submit") Login
      span OR
      a.create-account(href="/register") Create Account

  //- Styles for the login page
  style.
    h1 {
      color: white;
    }
    /* Scope the styles to login container */
    .login-container {
      background: #1e1e1e;
      padding: 40px;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
      width: 100%;
      max-width: 400px;
      margin: 50px auto;
      text-align: center;
    }

    .login-container input {
      width: 100%;
      box-sizing: border-box;
      padding: 14px;
      margin: 10px 0;
      border: 2px solid transparent;
      border-radius: 6px;
      font-size: 16px;
      background: #333;
      color: white;
      transition: 0.3s;
    }

    .login-container input:focus {
      border-color: #67d9dc;
      outline: none;
      background: #444;
    }

    .login-container button, 
    .login-container .create-account {
      display: block;
      width: 100%;
      box-sizing: border-box;
      padding: 14px;
      margin: 10px 0;
      background-color: #67d9dc;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 16px;
      font-weight: bold;
      text-align: center;
      text-decoration: none;
      transition: 0.3s;
    }

    .login-container button:hover, 
    .login-container .create-account:hover {
      background-color: #5dc5c1;
      transform: scale(1.05);
    }

    /* Styling for OR span */
    .login-container span {
      display: block;
      color: #67d9dc;
      font-size: 14px;
      font-weight: bold;
      margin: 10px 0;
      position: relative;
    }

    .login-container span::before,
    .login-container span::after {
      content: "";
      display: block;
      width: 40%;
      height: 1px;
      background: #67d9dc;
      position: absolute;
      top: 50%;
    }

    .login-container span::before {
      left: 0;
    }

    .login-container span::after {
      right: 0;
    }

