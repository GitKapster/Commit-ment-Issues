extends layout

block content
  h1 Forum
  
  .forum-container
    // Forum categories section
    .forum-categories
      h2 Categories
      .category-list
        .category-item
          a(href='/forum/category/general') General
          .category-description Discuss general topics
        .category-item
          a(href='/forum/category/questions') Questions
          .category-description Ask and answer questions
        .category-item
          a(href='/forum/category/announcements') Announcements
          .category-description Important updates and announcements

    // Recent topics section
    .recent-topics
      h2 Recent Topics
      .topic-list
        // Sample topic 1
        .topic-item
          .topic-title
            a(href='/forum/topic/1') Is Amin Team 1 Material?
          .topic-details
            span.topic-author Posted by Admin
            span.topic-date Feb 25, 2025
            span.topic-replies 2 replies
        
        // Sample topic 2
        .topic-item
          .topic-title
            a(href='/forum/topic/2') How do i become cracked at val like eri?
          .topic-details
            span.topic-author Posted by Kasper
            span.topic-date Feb 26, 2025
            span.topic-replies 1 reply

        // Sample topic 3
        .topic-item
          .topic-title
            a(href='/forum/topic/2') Is Nova227 the rookie of the year 2025?
          .topic-details
            span.topic-author Posted by RoehamptonEsports
            span.topic-date Feb 26, 2025
            span.topic-replies 1 reply

        // Sample topic 4
        .topic-item
          .topic-title
            a(href='/forum/topic/2') Is Brandon aka p1ksel Fraud?
          .topic-details
            span.topic-author Posted by Virtus.Roe
            span.topic-date Feb 26, 2025
            span.topic-replies 1 reply    
    
    // Create new topic button
    .create-topic
      button.create-topic-btn(onclick="window.location.href='/forum/new-topic'") Create New Topic
      
    // Esports News Section
    .esports-news
      h2 Esports News
      .news-scrollbox
        each news in esportsNews
          .news-item
            .news-title= news.title
            .news-date= news.date
      
  style.
    .forum-container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 20px;
      color: white;
      text-align: left;
    }
    
    h1 {
      color: white;
      margin-bottom: 30px;
    }
    
    h2 {
      color: #5dc5c1;
      margin-top: 30px;
      margin-bottom: 15px;
      border-bottom: 1px solid #555;
      padding-bottom: 10px;
    }
    
    .category-list {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 15px;
      margin-bottom: 30px;
    }
    
    .category-item {
      background: #2c2c2c;
      border-radius: 8px;
      padding: 15px;
      transition: all 0.3s ease;
    }
    
    .category-item:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }
    
    .category-item a {
      color: #5dc5c1;
      font-size: 18px;
      font-weight: bold;
      text-decoration: none;
      display: block;
      margin-bottom: 5px;
    }
    
    .category-description {
      color: #aaa;
      font-size: 14px;
    }
    
    .topic-list {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }
    
    .topic-item {
      background: #2c2c2c;
      border-radius: 8px;
      padding: 15px;
      transition: all 0.2s ease;
    }
    
    .topic-item:hover {
      background: #333;
    }
    
    .topic-title a {
      color: white;
      font-weight: bold;
      text-decoration: none;
      font-size: 16px;
    }
    
    .topic-title a:hover {
      color: #5dc5c1;
    }
    
    .topic-details {
      margin-top: 10px;
      font-size: 14px;
      color: #aaa;
      display: flex;
      gap: 15px;
    }
    
    .create-topic {
      margin-top: 30px;
      text-align: right;
    }
    
    .create-topic-btn {
      background: #5dc5c1;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    
    .create-topic-btn:hover {
      background: #4aa6a2;
      transform: scale(1.05);
    }
    
    /* News section styles */
    .esports-news {
      margin-top: 40px;
      margin-bottom: 30px;
    }
    
    .news-scrollbox {
      max-height: 300px;
      overflow-y: auto;
      background: #1e1e1e;
      border-radius: 8px;
      padding: 5px;
      scrollbar-width: thin;
      scrollbar-color: #5dc5c1 #333;
      display: flex;
      flex-direction: column;
      gap: 10px;
    }
    
    /* Scrollbar styling for webkit browsers */
    .news-scrollbox::-webkit-scrollbar {
      width: 8px;
    }
    
    .news-scrollbox::-webkit-scrollbar-track {
      background: #333;
      border-radius: 8px;
    }
    
    .news-scrollbox::-webkit-scrollbar-thumb {
      background-color: #5dc5c1;
      border-radius: 8px;
    }
    
    .news-item {
      background: #2c2c2c;
      border-radius: 8px;
      padding: 15px;
      border-left: 3px solid #5dc5c1;
    }
    
    .news-title {
      color: white;
      font-weight: bold;
      margin-bottom: 5px;
    }
    
    .news-date {
      color: #aaa;
      font-size: 14px;
    }