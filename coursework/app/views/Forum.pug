//- Forum Page
extends layout

block content
  h1 Forum
  
  .forum-container
    // Forum categories section
    .forum-categories
      h2 Categories
      .category-list
        .category-item
          a(href='/forum/category/general') General
          .category-description Discuss general topics
        .category-item
          a(href='/forum/category/questions') Questions
          .category-description Ask and answer questions
        .category-item
          a(href='/forum/category/announcements') Announcements
          .category-description Important updates and announcements

    // Recent topics section
    .recent-topics
      h2 Recent Topics
      .topic-list
        each topic in topics
          .topic-item
            .topic-header(onclick=`toggleTopic(${topic.id})`)
              .topic-title= topic.title
              .topic-details
                span.topic-author Posted by #{topic.author}
                span.topic-date= topic.date
                span.topic-replies #{topic.replies} #{topic.replies === 1 ? 'reply' : 'replies'}
            div(id=`topic-${topic.id}-content` class="topic-content hidden")
              p= topic.content
              .topic-actions
                a.view-more(href=`/forum/topic/${topic.id}`) View Full Discussion
    
    // Create new topic button
    .create-topic
      button.create-topic-btn(onclick="openNewTopicModal()") Create New Topic
      
    // Esports News Section
    .esports-news
      h2 Esports News
      .news-scrollbox
        each news in esportsNews
          .news-item
            .news-title= news.title
            .news-date= news.date
    
    // New Topic Modal
    #new-topic-modal.modal.hidden
      .modal-content
        .modal-header
          h3 Create New Topic
          span.close-modal(onclick="closeNewTopicModal()") &times;
        .modal-body
          form#new-topic-form(action="/forum/post-topic" method="POST")
            .form-group
              label(for="topic-title") Title:
              input#topic-title(type="text" name="title" required)
            
            .form-group
              label(for="topic-category") Category:
              select#topic-category(name="category" required)
                option(value="general") General
                option(value="questions") Questions
                option(value="announcements") Announcements
            
            .form-group
              label(for="topic-content") Content:
              textarea#topic-content(name="content" maxlength="1200" required)
              .word-counter
                span#word-count 0
                span / 200 words
            
            .form-actions
              button.submit-btn(type="submit") Post Topic
              button.cancel-btn(type="button" onclick="closeNewTopicModal()") Cancel
      
  script.
    // Toggle topic content visibility
    function toggleTopic(id) {
      const content = document.getElementById(`topic-${id}-content`);
      content.classList.toggle('hidden');
    }
    
    // Modal functions
    function openNewTopicModal() {
      document.getElementById('new-topic-modal').classList.remove('hidden');
    }
    
    function closeNewTopicModal() {
      document.getElementById('new-topic-modal').classList.add('hidden');
      document.getElementById('new-topic-form').reset();
      document.getElementById('word-count').textContent = '0';
    }
    
    // Word counter
    document.addEventListener('DOMContentLoaded', function() {
      const textarea = document.getElementById('topic-content');
      const wordCount = document.getElementById('word-count');
      
      textarea.addEventListener('input', function() {
        // Count words - split by whitespace and filter out empty strings
        const text = this.value.trim();
        const words = text ? text.split(/\s+/).filter(Boolean).length : 0;
        
        wordCount.textContent = words;
        
        // Visual feedback if over the limit
        if (words > 200) {
          wordCount.style.color = 'red';
        } else {
          wordCount.style.color = '';
        }
      });
      
      // Form submission
      document.getElementById('new-topic-form').addEventListener('submit', function(e) {
        const words = textarea.value.trim().split(/\s+/).filter(Boolean).length;
        
        if (words > 200) {
          e.preventDefault();
          alert('Please limit your post to 200 words.');
        }
      });
    });
      
  style.
    .forum-container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 20px;
      color: white;
      text-align: left;
    }
    
    h1 {
      color: white;
      margin-bottom: 30px;
    }
    
    h2 {
      color: #5dc5c1;
      margin-top: 30px;
      margin-bottom: 15px;
      border-bottom: 1px solid #555;
      padding-bottom: 10px;
    }
    
    .category-list {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 15px;
      margin-bottom: 30px;
    }
    
    .category-item {
      background: #2c2c2c;
      border-radius: 8px;
      padding: 15px;
      transition: all 0.3s ease;
    }
    
    .category-item:hover {
      transform: translateY(-5px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }
    
    .category-item a {
      color: #5dc5c1;
      font-size: 18px;
      font-weight: bold;
      text-decoration: none;
      display: block;
      margin-bottom: 5px;
    }
    
    .category-description {
      color: #aaa;
      font-size: 14px;
    }
    
    .topic-list {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }
    
    .topic-item {
      background: #2c2c2c;
      border-radius: 8px;
      padding: 15px;
      transition: all 0.2s ease;
    }
    
    .topic-item:hover {
      background: #333;
    }
    
    .topic-header {
      cursor: pointer;
    }
    
    .topic-header:hover .topic-title {
      color: #5dc5c1;
    }
    
    .topic-title {
      color: white;
      font-weight: bold;
      text-decoration: none;
      font-size: 16px;
      transition: color 0.2s ease;
    }
    
    .topic-details {
      margin-top: 10px;
      font-size: 14px;
      color: #aaa;
      display: flex;
      gap: 15px;
    }
    
    /* Topic content styles */
    .topic-content {
      margin-top: 15px;
      padding-top: 15px;
      border-top: 1px solid #444;
      color: #ccc;
    }
    
    .topic-content.hidden {
      display: none;
    }
    
    .topic-actions {
      margin-top: 10px;
      text-align: right;
    }
    
    .view-more {
      color: #5dc5c1;
      text-decoration: none;
      font-size: 14px;
      font-weight: bold;
    }
    
    .view-more:hover {
      text-decoration: underline;
    }
    
    .create-topic {
      margin-top: 30px;
      text-align: right;
    }
    
    .create-topic-btn {
      background: #5dc5c1;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    
    .create-topic-btn:hover {
      background: #4aa6a2;
      transform: scale(1.05);
    }
    
    /* News section styles */
    .esports-news {
      margin-top: 40px;
      margin-bottom: 30px;
    }
    
    .news-scrollbox {
      max-height: 300px;
      overflow-y: auto;
      background: #1e1e1e;
      border-radius: 8px;
      padding: 5px;
      scrollbar-width: thin;
      scrollbar-color: #5dc5c1 #333;
      display: flex;
      flex-direction: column;
      gap: 10px;
    }
    
    /* Scrollbar styling for webkit browsers */
    .news-scrollbox::-webkit-scrollbar {
      width: 8px;
    }
    
    .news-scrollbox::-webkit-scrollbar-track {
      background: #333;
      border-radius: 8px;
    }
    
    .news-scrollbox::-webkit-scrollbar-thumb {
      background-color: #5dc5c1;
      border-radius: 8px;
    }
    
    .news-item {
      background: #2c2c2c;
      border-radius: 8px;
      padding: 15px;
      border-left: 3px solid #5dc5c1;
    }
    
    .news-title {
      color: white;
      font-weight: bold;
      margin-bottom: 5px;
    }
    
    .news-date {
      color: #aaa;
      font-size: 14px;
    }
    
    /* Modal styles */
    .modal {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.7);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 1000;
    }
    
    .modal.hidden {
      display: none;
    }
    
    .modal-content {
      background: #1e1e1e;
      border-radius: 8px;
      width: 90%;
      max-width: 600px;
      max-height: 90vh;
      overflow-y: auto;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
    }
    
    .modal-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px 20px;
      border-bottom: 1px solid #444;
    }
    
    .modal-header h3 {
      color: #5dc5c1;
      margin: 0;
    }
    
    .close-modal {
      color: #aaa;
      font-size: 24px;
      cursor: pointer;
      transition: color 0.2s ease;
    }
    
    .close-modal:hover {
      color: #fff;
    }
    
    .modal-body {
      padding: 20px;
    }
    
    /* Form styles */
    .form-group {
      margin-bottom: 20px;
    }
    
    label {
      display: block;
      margin-bottom: 8px;
      color: #ddd;
      font-weight: bold;
    }
    
    input[type="text"],
    select,
    textarea {
      width: 100%;
      padding: 10px;
      border-radius: 5px;
      border: 1px solid #444;
      background: #2c2c2c;
      color: #fff;
      font-family: inherit;
    }
    
    textarea {
      min-height: 120px;
      resize: vertical;
    }
    
    .word-counter {
      margin-top: 5px;
      text-align: right;
      color: #aaa;
      font-size: 14px;
    }
    
    .form-actions {
      display: flex;
      justify-content: flex-end;
      gap: 10px;
      margin-top: 20px;
    }
    
    .submit-btn {
      background: #5dc5c1;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.2s ease;
    }
    
    .submit-btn:hover {
      background: #4aa6a2;
    }
    
    .cancel-btn {
      background: #444;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      font-weight: bold;
      cursor: pointer;
      transition: all 0.2s ease;
    }
    
    .cancel-btn:hover {
      background: #555;
    }